{
                <script>
                    function myFunction() {
                        window.print();
                    }</script>
            }

            <div class="container" id="box">
                <div class="row well">
                    <button type="button" class="btn btn-primary d-print-none" onclick="javascript:print()">列印文件</button>
                </div>
            </div>
        </div> <!-- .container -->
    </div> <!-- .page-section -->
</main>