@{
    ViewBag.Title = "三軍總醫院大數據醫療資料申請作業規定";
}

<style>
    h6 {
        text-indent: -36px;
        padding-left: 36px;
    }

    .content li {
        list-style: none;
        text-indent: -36px;
        padding-left: 36px;
    }
